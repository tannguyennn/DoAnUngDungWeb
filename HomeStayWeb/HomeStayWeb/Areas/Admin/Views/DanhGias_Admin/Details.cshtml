    ViewBag.Title = "THÔNG TIN CHI TIẾT";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>THÔNG TIN CHI TIẾT</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã đánh giá:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDDanhGia)
        </dd>

        <dt>
            Mã khách hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDKH)
        </dd>

