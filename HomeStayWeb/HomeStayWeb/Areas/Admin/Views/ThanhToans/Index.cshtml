@model IEnumerable<HomeStayWeb.Models.ThanhToan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "IDThanhToan", rowsPerPage: 10);
}
<h2>DANH SÁCH THANH TOÁN</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("#",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("IDThanhToan","Mã thanh toán"),
        grid.Column("IDDP","Mã đặt phòng"),
        grid.Column("NhanVien.TenNV","Tên nhân viên"),
        grid.Column("NgayThanhToan","Ngày thanh toán"),
        grid.Column("Sotien","Số tiền"),
        grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","ThanhToans", new { id = item.IDThanhToan },"ThanhToansController")),
        grid.Column(format: (item) => Html.ActionLink("Chỉnh sửa", "Edit","ThanhToans", new { id = item.IDThanhToan },"ThanhToansController")),
        grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","ThanhToans", new { id = item.IDThanhToan },"ThanhToansController")),
        }
       )
    </div>
</body>